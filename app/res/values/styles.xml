<?xml version="1.0" encoding="utf-8"?>

<resources>

	<!-- Action Bar -->
	<style name="Widget.Styled"></style>

	<style name="Widget.Styled.ActionButton"></style>

	<style name="Widget.Styled.ActionButton.Overflow">
		<item name="android:src">@drawable/ic_menu_moreoverflow_holo_light</item>
		<item name="android:background">?attr/actionBarItemBackground</item>
		<item name="android:contentDescription">@string/abs__action_menu_overflow_description</item>
	</style>

	<!-- View Pager Indicator -->
	<style name="Widget.Styled.ViewPagerIndicator"></style>

	<style name="Widget.Styled.ViewPagerIndicator.Light">
		<item name="android:background">@drawable/abs__ab_solid_light_holo</item>
		<item name="footerColor">@color/blue</item>
		<item name="footerLineHeight">1dp</item>
		<item name="footerIndicatorHeight">3dp</item>
		<item name="footerIndicatorStyle">underline</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="selectedColor">@android:color/black</item>
		<item name="selectedBold">true</item>
	</style>

	<!-- List Views -->
	<style name="ListView">
		<item name="android:dividerHeight">2px</item>
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:fadingEdge">none</item>
	</style>

	<style name="DarkListView" parent="ListView">
		<item name="android:divider">@drawable/list_divider_holo_dark</item>
		<item name="android:listSelector">@drawable/list_selector_holo_dark</item>
	</style>

	<style name="LightListView" parent="ListView">
		<item name="android:divider">@drawable/list_divider_holo_light</item>
		<item name="android:listSelector">@drawable/list_selector_holo_light</item>
	</style>

	<style name="ListItem">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>
	<!-- End List Views -->

	<!-- Image Buttons -->
	<style name="ImageButton">
	</style>

	<style name="DarkImageButton" parent="ImageButton">
		<item name="android:background">@drawable/list_selector_holo_dark</item>
	</style>

	<style name="DarkImageButton" parent="ImageButton">
		<item name="android:background">@drawable/list_selector_holo_light</item>
	</style>

	<style name="MediaButton">
		<item name="android:layout_height">@dimen/image_button_height</item>
		<item name="android:clickable">true</item>
		<item name="android:layout_marginLeft">@dimen/image_button_margin</item>
		<item name="android:layout_marginRight">@dimen/image_button_margin</item>
	</style>
	<!-- End Image Buttons -->

	<!-- Custom Notification Styles -->
	<!-- For custom notifications we must use a style to ensure that the text is readable. See http://developer.android.com/guide/topics/ui/notifiers/notifications.html#CustomNotification -->
	<style name="NotificationText">
		<item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
	</style>

	<style name="NotificationTitle">
		<item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="NotificationMediaButton">
		<item name="android:background">@drawable/list_selector_holo_dark</item>
		<item name="android:layout_height">@dimen/image_button_height</item>
		<item name="android:clickable">true</item>
		<item name="android:layout_marginLeft">@dimen/image_button_margin</item>
		<item name="android:layout_marginRight">@dimen/image_button_margin</item>
	</style>
	<!-- End Custom Notification Styles -->
</resources>