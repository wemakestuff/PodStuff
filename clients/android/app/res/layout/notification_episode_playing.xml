<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="?android:attr/listPreferredItemHeight">

	<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/ib_cancel"
			android:src="@drawable/ic_menu_close_clear_cancel"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@android:color/transparent"
			android:padding="2dp" />

	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/iv_podcast_icon"
			android:contentDescription="Podcast Title Goes Here"
			android:src="@drawable/ic_contact_picture"
			android:layout_alignParentTop="true"
			android:padding="5dp" />

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Startups For the Rest of Us"
			android:id="@+id/tv_podcast_title"
			android:layout_toRightOf="@id/iv_podcast_icon"
			android:layout_alignTop="@id/iv_podcast_icon"
			android:paddingLeft="5dp"
			android:paddingTop="5dp"
			android:singleLine="true"
			android:ellipsize="end"
			android:layout_toLeftOf="@id/ib_cancel" />

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Episode 137 | Startup Feedback, Finding Better Consulting Gigs, and More Listener Questions"
			android:id="@+id/tv_episode_title"
			android:paddingLeft="5dp"
			android:layout_alignLeft="@id/tv_podcast_title"
			android:layout_below="@id/tv_podcast_title"
			android:singleLine="true"
			android:ellipsize="end"
			android:layout_toLeftOf="@id/ib_cancel" />

	<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/ib_backward"
			android:src="@drawable/ic_media_rew"
			android:layout_below="@id/tv_episode_title"
			android:layout_alignLeft="@id/tv_episode_title"
			android:background="@android:color/transparent"
			android:padding="2dp" />

	<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/ib_play_pause"
			android:src="@drawable/ic_media_play"
			android:layout_below="@id/tv_episode_title"
			android:layout_toRightOf="@id/ib_backward"
			android:background="@android:color/transparent"
			android:padding="2dp" />

	<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/ib_forward"
			android:src="@drawable/ic_media_ff"
			android:layout_below="@id/tv_episode_title"
			android:layout_toRightOf="@id/ib_play_pause"
			android:background="@android:color/transparent"
			android:padding="2dp" />

	<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/ib_next"
			android:src="@drawable/ic_media_next"
			android:layout_below="@id/tv_episode_title"
			android:layout_toRightOf="@id/ib_forward"
			android:background="@android:color/transparent"
			android:padding="2dp" />
</RelativeLayout>